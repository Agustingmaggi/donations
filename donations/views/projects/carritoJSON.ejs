<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>Carrito con json</h2>   
                
    <% if (productos.length > 0) { %>
        <ul>
            <% productos.forEach(function(product){ %>
                <li>
                    <%= product.name %> | $<%= product.price %>
                <form action="/projects/agregar" method="post">
                <input type="hidden" name="id" value="<%= product.id %>">
                <input type="number" min="1" name="quantity">
                <button type="submit">Agregar</button>    
                </form>
                </li>
           <% }) %> 
        </ul>
        <% } else { %>
            <p>No hay prods en la tabla de datos</p>
            <% } %>
      <br><br><br>
      <% if (carrito.length > 0) { %>
          <ul>
              <% carrito.forEach(function(prod){ %>
                  <li>
                      <%= prod.name %> |
                      <%= prod.quantity %>
                      <%= prod.subtotal %>
                      <form action="/projects/eliminar" method="post">
                          <input type="hidden" name="id" value="<%= prod.id %>">
                          <button type="submit">Eliminar</button>
                      </form>
                  </li>
              <% }) %>
          </ul>
          <% 
          let total = 0
          carrito.forEach(function(prod){
              total += prod.subtotal
          })
          %>
          <p>Total: $<%= total %></p>
              <form action="/projects/checkout" method="post">
                  <button type="submit">Pagar</button>
                  </form>
          <% } else { %>
           no hay prods
          <% } %></body>
</html>